@model List<BooksDir.Models.Book>

@{
    ViewData["Title"] = "Books List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Book</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Pages</th>
            <th>Year</th>
            <th>Author</th>
            <th>Genre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Description</td>
            <td>@book.Pages</td>
            <td>@book.Year</td>
            <td>@book.Author?.AuthorName</td>
            <td>@book.Genre?.GenreName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
