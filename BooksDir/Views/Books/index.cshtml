@model List<BooksDir.Models.Book>

@{
    ViewData["Title"] = "Books List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Book</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Pages</th>
            <th>Year</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td><a asp-action="Details" asp-route-id="@book.Id">@book.Title</a></td>
            <td>@book.Pages</td>
            <td>@book.Year</td>
            <td>@book.Author?.AuthorName</td>
            <td>@book.Genre?.GenreName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning">Edit</a>

                <form asp-action="Delete" asp-route-id="@book.Id" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-danger"
                            onclick="return confirm('Are you sure you want to delete this book?');">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
